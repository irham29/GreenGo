<%
  var currentDate = new Date();

  // Mendapatkan tanggal, bulan, dan tahun
  var day = String(currentDate.getDate()).padStart(2, '0');
  var month = String(currentDate.getMonth() + 1).padStart(2, '0'); // Perhatikan penambahan 1 pada bulan
  var year = currentDate.getFullYear();

  // Menggabungkan tanggal, bulan, dan tahun menjadi format yang diinginkan
  var formattedDate = day + '-' + month + '-' + year;
%>
<div class="col-md-8">
  <div class="row">
    <div class="col-md-12 title-pesan">
      <p>RIWAYAT</p>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <p>Show</p>
      <form action="">
        <div class="mb-3">
          <input type="number" class="form-control" id="exampleFormControlInput1" />
        </div>
      </form>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-11">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Username</th>
            <th scope="col">Barang</th>
            <th scope="col">Tanggal</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach((donation, index) => { %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= donation.user.username %></td>
              <td><%= donation.name %></td>
              <td><%= formattedDate %></td>
              <td><%= donation.status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-end">
    <div class="col-md-4">
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>